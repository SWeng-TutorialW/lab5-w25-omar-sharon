<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/17.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="il.cshaifasweng.OCSFMediatorExample.client.Game">
   <children>
      <!-- Game Status Label -->
      <Label fx:id="statusLabel" text="Player X's Turn" />

      <!-- 3x3 GridPane -->
      <GridPane alignment="CENTER" gridLinesVisible="true">
         <children>
            <!-- Row 0 -->
            <Button fx:id="button00" onAction="#handleButtonClick" text="" GridPane.rowIndex="0" GridPane.columnIndex="0" />
            <Button fx:id="button01" onAction="#handleButtonClick" text="" GridPane.rowIndex="0" GridPane.columnIndex="1" />
            <Button fx:id="button02" onAction="#handleButtonClick" text="" GridPane.rowIndex="0" GridPane.columnIndex="2" />

            <!-- Row 1 -->
            <Button fx:id="button10" onAction="#handleButtonClick" text="" GridPane.rowIndex="1" GridPane.columnIndex="0" />
            <Button fx:id="button11" onAction="#handleButtonClick" text="" GridPane.rowIndex="1" GridPane.columnIndex="1" />
            <Button fx:id="button12" onAction="#handleButtonClick" text="" GridPane.rowIndex="1" GridPane.columnIndex="2" />

            <!-- Row 2 -->
            <Button fx:id="button20" onAction="#handleButtonClick" text="" GridPane.rowIndex="2" GridPane.columnIndex="0" />
            <Button fx:id="button21" onAction="#handleButtonClick" text="" GridPane.rowIndex="2" GridPane.columnIndex="1" />
            <Button fx:id="button22" onAction="#handleButtonClick" text="" GridPane.rowIndex="2" GridPane.columnIndex="2" />
         </children>
      </GridPane>
   </children>
   <padding>
      <Insets top="20.0" bottom="20.0" left="20.0" right="20.0" />
   </padding>
</VBox>
